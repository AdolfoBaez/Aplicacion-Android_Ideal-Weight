<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.adolfo.idealweight.AdapterDesayuno1">

    <!--  listrow  -->

    <ImageView
        android:id="@+id/imagen_d1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:src="@drawable/button_i"
        />

    <TextView
        android:layout_toRightOf="@+id/imagen_d1"
        android:id="@+id/title_d1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niveles"
        android:textColor="#040404"
        android:typeface="sans"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/description_d1"
        android:layout_below="@+id/title_d1"
        android:layout_alignLeft="@+id/title_d1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textColor="#040404"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
